# Example .shellrc configuration file
# This file is automatically loaded when the shell starts
# Place it in your home directory: ~/.shellrc

# Environment variables
export EDITOR=nano
export PAGER=less
export TERM=xterm-256color
export MY_PROJECT=/home/user/projects

# Useful aliases
alias ll="ls -la"
alias la="ls -a"
alias l="ls -CF"
alias ..="cd .."
alias ...="cd ../.."
alias grep="grep --color"
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"
alias df="df -h"
alias du="du -h"

# Development aliases
alias py="python"
alias serve="python -m http.server"
alias json="python -m json.tool"

# Git-like aliases (if you implement git commands)
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git log"

# Enable command timing by default
# timings -e

# Custom prompt (if implemented)
# export PS1="\u@\h:\w$ "

# Welcome message
echo "Welcome to PyodideShell!"
echo "Type 'help' for available commands"
echo "Configuration loaded from ~/.shellrc"